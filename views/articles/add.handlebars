<section class="section">
    <div class="container is=fullhd">
        <div class="field">
            <!----Ne pas oublier de rajouter l'url et la méthode. "multipart/form-data" sert à prendre en compte le jpeg--->
            <form action="/articles/post" method="POST" enctype="multipart/form-data">
                <label class="label">Titre de l'article</label>
                <div class="control">
                    <input class="input" type="text" name="title">
                </div>
        </div>

        <div class="field">
            <label class="label">Contenu</label>
            <div class="control">
                <textarea class="textarea" name="content"></textarea>
            </div>
        </div>

        <div class="field">
            <form action="/articles/post" method="post">
                <label class="label">Auteur</label>
                <div class="control">
                    <input class="input" type="text" name="author">
                </div>
        </div>

        <div class="file">
            <label class="file-label">
                <input class="file-input" type="file" name="image">
                <span class="file-cta">
                    <span class="file-icon">
                        <i class="fas fa-upload"></i>
                    </span>
                    <span class="file-label">
                        Envoyer une image au format : jpg
                    </span>
                </span>
            </label>
        </div>

        <div class="field is-grouped">
            <div class="control">
                <button class="button is-link">Enregister</button>
            </div>
            <div class="control">
                <button class="button is-text">Annuler</button>
            </div>
            </form>
        </div>
    </div>
</section>