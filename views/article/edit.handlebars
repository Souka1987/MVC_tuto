<section class="section">
    <class class="container is=fullhd">
        <div class="field">
            <form action="/articles/edit/{{ article._id }}" method="POST" enctype="multipart/form-data">
                <label class="label">Titre de l'article: {{ article.title }} </label>
                <div class="control">
                    <input class="input" type="text" name="title" value="{{ title }}">
                </div>


                <div class="field">
                    <label class="label">Contenu</label>
                    <div class="control">
                        <textarea name="content" id="editor1" rows="10" cols="80" value="{{ content }}"></textarea>
                        <script>
                            CKEDITOR.replace('content');
                        </script>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Auteur</label>
                    <div class="control">
                        <input class="input" type="text" name="author" value="{{ author }}">
                    </div>
                    <button class="button is-link">Valider</button>
                </div>
            </form>
        </div>
    </class>
</section>